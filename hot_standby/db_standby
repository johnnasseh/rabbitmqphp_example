vrrp_script chk_mysql {
    script "/usr/local/bin/check_mysql.sh" # path to health check script
    interval 2
    weight -20                        # decrease priority if check fails
}


vrrp_instance VI_1 {
    state MASTER
    interface zth6rkm5gu
    virtual_router_id 51               # must be the same on both servers
    priority 100                       # higher priority means it's the primary
    advert_int 1
    unicast_src_ip 192.168.194.225
    unicast_peer {
        192.168.194.186
}

    authentication {
        auth_type PASS
        auth_pass it490
    }
    virtual_ipaddress {
        192.168.194.250                # virtual ip that your application will connect to
    }
    track_script {
        chk_mysql                      # health check script
    }
}

global_defs {
script_user root
enable_script_security
}
